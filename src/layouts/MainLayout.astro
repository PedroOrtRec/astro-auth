---
import './src/styles/global.css' 
import Navbar from '@/components/shared/Navbar.astro';

interface Props {
    title?: string;
}

const { title = 'Auth Astro App'} = Astro.props;

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#f5f5f5] circles-pattern">
        <Navbar />
		<main class="container m-auto max-w-3xl p-2 mt-4 bg-white rounded-lg">
			<slot />
		</main>
	</body>
</html>

